import javax.swing.JOptionPane;

public class num9 {
    public static void main(String[] args) {
        int sum = 0;
        while (true) {
            int val = Integer.parseInt(JOptionPane.showInputDialog("Enter number (0 to stop):"));
            if (val == 0) break;
            sum += val;
        }
        JOptionPane.showMessageDialog(null, "Sum = " + sum);
    }
}
